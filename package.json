{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "Curso de TDD com javascript",
  "main": "index.js",
  "dependencies": {
    "clean-webpack-plugin": "^1.0.1",
    "ramda": "^0.26.1",
    "user": "^0.0.0",
    "webpack": "^4.29.5"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "scripts": {
    "build": "webpack --colors --mode production",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register  --watch",
    "test:coverage": "nyc npm test",
    "dev": "npm run build -- --mode development; webpack-dev-server  --inline --open --hot",
    "lint": "./node_modules/.bin/eslint src/*.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:coverage"
    }
  },
  "nyc": {
    "functions": 80,
    "lines":80,
    "check-coverage": true,
    "reporter": ["text","html"],
    "exclude": ["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeansarlon/js-tdd-course.git"
  },
  "keywords": [
    "JS",
    "TDD"
  ],
  "author": "Jean Sarl√¥n <jean.sarlon@icloud.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeansarlon/js-tdd-course/issues"
  },
  "homepage": "https://github.com/jeansarlon/js-tdd-course#readme"
}
